{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "node_modules/**/*",
    "shims-vue.d.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ES2017",
      "DOM"
    ]
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}